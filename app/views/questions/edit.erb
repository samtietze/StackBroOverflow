<h2>Edit your question, dogg</h2>

<% erb :_errors, locals: { errors: @errors } %>

<form action='/questions/<%= question.id %>' method='post'>
  <input type='hidden' name='_method' value='put'>
  <%= erb :'questions/_question_fields', locals: { question: question } %>
  <input type='submit' value='Submit, bro'>
</form>
