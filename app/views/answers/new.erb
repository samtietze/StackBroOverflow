<h3>Have Another Idea for an Answer?</h3>

<% if @errors %>
<%= erb :"_errors", locals: {errors: @errors} %>
<% end %>

<form method="POST" action="/questions/:question_id/answers">
  <div class="form-field">
    <input type="text" name="answer[answer_body]" value="<%= @answer.body %>" placeholder="put answer here">
  </div>
  <div class="form-field">
    <textarea rows="15" cols="75" name="game[description]" placeholder="description"><%= @answer.body %></textarea>
  </div>
  <input type="submit">
</form>
